.descargaEnZona
	background-color #DBDBDB
	border 3px dashed gray !important
.dropzone
	width 90%
	margin 0 auto
	min-height 100px
	border-radius 10px
	border 5px dashed gray
	display flex
	justify-content center
	align-items center
	background-color #D6D6D6
.elementosArrastrables
	width 100%
	display flex
	justify-content space-between
	margin-top 10px
.elementoArrastrable
	width 20%
	padding 10px
	text-align center
	&:hover
		transition 2s background-color
		background-color #BFBFBF
.draggable
	cursor pointer

.dragEnter
	background-color #FFFFFF !important

.eliminarArtefacto
	animation 2s eliminar 1 linear
@keyframes eliminar
	0%
		transform scale(1,1)
	50%
		transform scale(.5,.5)
	100%
		transform scale(0,0)
