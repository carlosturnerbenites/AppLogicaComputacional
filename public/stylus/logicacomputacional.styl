html,body
	height 100%

input, textarea, select, button
	outline none
hr
	width 90%
	margin 10px auto
	color gray
	box-shadow 0px 4px 16px gray
	border-radius 50%

input:disabled,select:disabled
	cursor not-allowed
	border none
	background-color rgba(0, 0, 0, .2)
input,select
	border-top 3px solid gray
select
	background-color transparent
body
	font-size 20px
	font-family 'Lato' sans-serif
	margin 0
a
	color colorLink
	&:visited
		color colorLinkVisited
ul
	margin 0
	padding 0
	list-style none
.fieldset
	padding 10px 0
	border none
	display flex
	justify-content center
	flex-wrap wrap
figure
	margin 0
	padding 0

/*
+-----------------------+
|		Menu 			|
+-----------------------+
*/

nav
	width 100%
	//position fixed
	ul
		background-color colorMenuFooter
		li
			display inline-block
			a
				color white !important
				text-decoration none
				display inline-block
				font-size 1.2em
				&:hover
					transition background-color 2s
					background-color rgba(0,0,0,0.9)
				&:hover > .icono
					animation 1s aumentaDisminuye infinite linear
			a.itemsMenu
				padding 10px
				.nombreMenu:first-letter
					font-size 1.3em

/*
+----------------------------+
|Imagen con paralax - Iniciio|
+----------------------------+
*/

.imagenFondo
	background-image url('../img/backgroundIndex.jpg')
	width 100%
	height 600px
	background-attachment fixed
	background-position: center
	background-size cover
	text-align center





/*
+---------------------------+
|	Listado de Ejercicios	|
|	y Cursos disponibles	|
+---------------------------+
*/

ul.listado
	li
		margin 10px 0
		font-size 1em



/*
+-----------------------+
|		footer			|
+-----------------------+
*/
footer
	padding-top 10px
	margin-top 30px
	border-top 5px solid rgba(0,0,0,1)
	background-color colorMenuFooter
	color white
	width 100%

	.contactoRedes
		font-size 2em
		.icon-facebook
			color facebookColor
		.icon-google
			color googleColor
		.icon-twitter
			color twitterColor
		.icon-youtube
			color youtubeColor
		.icon-github
			color githubColor

	p
		margin 5px 0
		text-align center
	.contactoRedes
		background-color white !important
		text-align right
		padding 5px 0
		a
			//falta prefijos
			filter grayscale(100%)
			text-decoration none
			.iconoRed
				-webkit-filter grayscale(100%)
				margin 0 5px
				&:hover
					transition -webkit-filter 1s
					-webkit-filter grayscale(0%)
	.acciones
		display flex
		justify-content space-around

