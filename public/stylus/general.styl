::-webkit-scrollbar
	width .7em
	height .7em
::-webkit-scrollbar-thumb
	background slategray
::-webkit-scrollbar-track
	background #b7bfc7

input[type="checkbox"],input[type="radio"]
	cursor pointer
	font-family 'icomoon'
	appearance none
	width 25px
	height 25px
	border 2px solid gray
	&:checked
		&:before
			color rgb(0, 0, 0) !important
			content "\e607"
	&:hover
		&:before
			color rgba(0, 0, 0, .5)
			content "\e607"
input[type="radio"]
	border-radius 50%
input[type="checkbox"]
	border-radius 5px

body
	scrollbar-face-color slategray
	scrollbar-track-color #b7bfc7

/*
+-----------------------+
|		Ayuda			|
+-----------------------+
*/
.seccionAyuda
	.seccionExplicacion
		padding 20px
		position absolute
		border 2px solid colorBtnAyudaBorder
		background-color colorBtnAyudaBackground
		border-radius 10px
		border-top none
		border-top-left-radius 0
		border-top-right-radius 0



/*
+-----------------------+
|		MSG 			|
+-----------------------+
*/
.contenedorMensaje
	position absolute
	bottom 0
	animation 2s ascender 1 linear
	.MSG
		color white
		border 3px solid
		border-radius 10px
		display inline-block
		padding 0 10px

		span,p
			display inline-block
		span
			margin-right 20px
			animation 1s aumentaDisminuye infinite linear

		&Bien
			background-color colorBtnEnviarBackground
			border-color colorBtnEnviarBorder
			&:hover
				transition background-color 2s
				background-color colorBtnEnviarBorder

		&Error
			background-color colorBtnCancelarBackground
			border-color colorBtnCancelarBorder
			&:hover
				transition background-color 2s
				background-color colorBtnCancelarBorder

.inputSubirGrafo
	display none


/*
+-----------------------+
|	Errores de pagina	|
+-----------------------+
*/
.error
	.code
		font-size 6em
		margin 10px 0


/*
+-----------------------------------+
|	Estilo de teclas o shotcuts		|
+-----------------------------------+
*/
.contenedorTeclas
	p
		display inline-block !important
.tecla
	color white
	border-radius 5px
	padding 0 10px
	background-color rgba(0,0,0,.8)

