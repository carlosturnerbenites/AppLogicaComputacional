@import "normalize.styl"
@import url(https://fonts.googleapis.com/css?family=Lato)

input, textarea, select
	outline none
select
	background-color transparent
body
	font-size 16px
	font-family 'Lato' sans-serif
	margin 0
	font-size 18px
ul
	margin 0
	list-style none
fieldset
	border none
figure
	margin 0
	padding 0

/*
+-----------------------+
|		CSSOO			|
+-----------------------+
*/

.contenedorDeAncho
	max-width 1200px
	margin 0 auto
.borderNone
	border none
.textoNegrilla
	font-weight bold
.dosColumnas
	width 50%
	margin 0
	padding 0
.ancho100PorCieto
	width 100%
.displayFlexCenterTotal
	display flex
	justify-content center
	align-items center
	flex-wrap wrap
.textoCentrado
	text-align center
.containerInfo
	width 100%
.titulo
	font-size 2em
	text-transform uppercase
	border-bottom 1px dashed black
	display inline-block
	padding 10px
.inputCenterUppercase
	text-align center
	text-transform uppercase
.textoDescripcion
	font-size 0.8em
	color gray
	margin-left 20px
	margin-top 2px
	margin-bottom 20px
/*
+-----------------------+
|		Menu 			|
+-----------------------+
*/

nav
	width 100%
	position fixed
	ul
		background-color rgba(0,0,0,0.7)
		li
			display inline-block
			a.itemsMenu
				padding 10px
				color white
				display block
				text-decoration none
				&:first-letter
					font-size 1.2em

/*
+----------------------------+
|Imagen con paralax - Iniciio|
+----------------------------+
*/

.imagenFondo
	background-image url('../img/backgroundIndex.jpg')
	width 100%
	height 600px
	background-attachment fixed
	background-position: center
	background-size cover
	text-align center
	filter blur(2px)
	background-position: 50% 50%;

/*
+-----------------------+
|		Botones 		|
+-----------------------+
*/

colorBtnConfirmarBackground = #87BC5E
colorBtnConfirmarBorder = #3C7113

colorBtnCancelarBackground = #D46A6A
colorBtnCancelarBorder = #801515

colorBtnEnviarBackground = #4D658D
colorBtnEnviarBorder = #152D54

.btn
	border 2px solid #000
	border-radius 5px
	color #fff
	padding 10px
	font-size 1em
	font-weight bold
	letter-spacing 3px
	&Confirmar
		background-color colorBtnConfirmarBackground
		border-color colorBtnConfirmarBorder
		&:hover
			transition background-color 2s
			background-color colorBtnConfirmarBorder
	&Cancelar
		background-color colorBtnCancelarBackground
		border-color colorBtnCancelarBorder
		&:hover
			transition background-color 2s
			background-color colorBtnCancelarBorder
	&Enviar
		background-color colorBtnEnviarBackground
		border-color colorBtnEnviarBorder
		&:hover
			transition background-color 2s
			background-color colorBtnEnviarBorder

/*
+-----------------------------------+
|		Efecto de linea inferior	|
|		de los inputs en fous 		|
+-----------------------------------+
*/

.inputBorderBottomFocus
	border-color transparent
	border-bottom 1px solid transparent

.inputBorderBottomFocus:focus
	transition border-bottom 3s
	border-bottom 1px solid black

/*
+-----------------------+
|	Modulo deConjuntos	|
+-----------------------+
*/

.formConjuntos
	.nombreConjunto
		width 20px
		text-align right
.corchetesConjuntos:after
	content "}"
.corchetesConjuntos:before
	content " = {"

/*
+-----------------------+
|	Pagina -> Acerca de	|
+-----------------------+
*/

.acercaDe
	background-color gray
	padding 20px
	border-radius 20px
	.img
		width 30%
		img
			display block
			width 90%
			margin 0 auto
			border-radius 50%
	.infoCreador
		width 70%

/*
+---------------------------+
|	Listado de Ejercicios	|
|	y Cursos disponibles	|
+---------------------------+
*/

ul.listado
	li
		margin 10px 0
		font-size 1em


/*
+-----------------------+
|	Tablas de Verdad	|
+-----------------------+
*/

table
	border-collapse:collapse;
	display inline-block
	margin 10px
	tr
		th
			padding 10px
			border 2px solid black
			&:last-child
				padding 0
		.respuestaEjercicio
			border none
			outline none
			text-align center
			text-transform uppercase
			font-weight bold
			height 100%

/*
+-----------------------------------+
|			Animaciones				|
+-----------------------------------+
*/

@keyframes parpadeoError
	0%
		background-color #FFAAAA
	50%
		background-color #D46A6A
	100%
		background-color #FFAAAA

/*
+-----------------------------------+
|			Queries				|
+-----------------------------------+
*/

@media screen and (max-width: 1200px)
	.dosColumnas
		width 80%
		margin 0 auto
		display block



//-----------------------
.respuesta
	width 50%
	margin 30px auto
	display block
	min-height 200px
	text-align center


.valorErroneo
	animation 2s parpadeoError linear infinite
